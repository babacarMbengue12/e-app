{% extends "base_stock.html.twig" %} {% block body %}
<table class="table table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>actions</th>
    </tr>
  </thead>
  <tbody>
    {% for category in categories %}
    <tr>
      <td>{{ category.id }}</td>
      <td>{{ category.title }}</td>
      <td>
        <a
          class="btn btn-secondary"
          href="{{ path('category_edit', { id: category.id }) }}"
          >edit</a
        >
      </td>
    </tr>
    {% else %}
    <tr>
      <td colspan="3">no records found</td>
    </tr>
    {% endfor %}
  </tbody>
</table>

<a class="btn btn-success" href="{{ path('category_new') }}">Create new</a>
{% endblock %}
